#include <iostream>
using namespace std;

int main() {
	int n = 0;
	cin >> n;
	for (int i = 0; i < n; i++) {
		int l = 0, w = 0, h = 0;
		cin >> l >> w >> h;
		int s = 2 * (l * h + w * h);
		if (s % 16 == 0) {
			cout << s / 16 << endl;
		}
		else {
			cout << s / 16 + 1 << endl;
		}
	}
    return 0;
}
